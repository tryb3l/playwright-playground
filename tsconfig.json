{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["e2e/pages/*"],
      "@components/*": ["e2e/lib/components/*"],
      "@utils/*": ["e2e/lib/utils/*"],
      "@fixtures/*": ["e2e/lib/fixtures/*"],
      "@factories/*": ["e2e/lib/factories/*"]
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // ... other options ...
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
