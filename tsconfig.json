{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["e2e/pages/*"],
      "@components/*": ["e2e/lib/components/*"],
      "@utils/*": ["e2e/lib/utils/*"],
      "@fixtures/*": ["e2e/lib/fixtures/*"],
      "@factories/*": ["e2e/lib/factories/*"]
    },
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
    //TODO consider extension of the tsconfig opts
  },
  "include": ["**/*.ts", "e2e/lib/utils/global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
